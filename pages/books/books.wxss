/* pages/books/books.wxss */
.books{
    background: #f9f9f9;
}
.title{
    text-align: center;
}
.books_list{
    display: flex;
    flex-wrap: wrap;
}
.books_list>view{
    width: 50%;
    height: 360rpx;
    margin: 30rpx 0;
}
.books_list>view>view{
    width: 240rpx;
    height: 100%;
    margin: 0 auto;
    border-radius: 15rpx;
    background: #fff;
    box-shadow: 0 0 40rpx  #999;
}
.books_list image{
    width: 100%;
    height: 225rpx;
    border-radius: 15rpx 15rpx 0 0;
}
.title_box{
    padding: 0 20rpx;
    font-size: 25rpx;
    
}
.books_title,.books_author,.books_like{
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis; 
}
.books_author,.books_like{
    font-size: 20rpx;
    color: #a0a0a0;
}
.books_author{
    margin: 10rpx 0 20rpx;
}
.books_like{
    text-align: right;
}
